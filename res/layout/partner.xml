<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/partnerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_image"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.0" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical|top"
            android:hint="@string/hint_text"
            android:inputType="textMultiLine"
            android:textColor="#ffffff"
            android:visibility="invisible" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_secret"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_area" />
    </FrameLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/look_answer_button" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.0" >

        <ImageView
            android:id="@+id/partnerLeftHand1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_area"
            android:fitsSystemWindows="true"
            android:src="@drawable/cocco_left_hand_up1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/partnerRightHand1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_area"
            android:src="@drawable/cocco_right_hand_up1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/partnerBasic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_area"
            android:src="@drawable/cocco_basic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/partnerLeftFoot1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_area"
            android:src="@drawable/cocco_left_foot_up1"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/partnerRightFoot1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_area"
            android:src="@drawable/cocco_right_foot_up1"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#81ffff"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:text="@string/partner_screen" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:onClick="changeMainScreen"
            android:text="@string/player" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:onClick="changeActionScreen"
            android:text="@string/action" />

    </LinearLayout>

</LinearLayout>