<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.eclipcebook"
    android:versionCode="12"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/icon1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.exkazuu.ManekkoDance.activities.TitleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.exkazuu.ManekkoDance.LessonList"
            android:label="@string/title_activity_lesson_list" >
        </activity>
        <activity
            android:name="net.exkazuu.ManekkoDance.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="net.exkazuu.ManekkoDance.activities.PartnerActivity"
            android:label="@string/title_activity_partner" >
        </activity>
        <activity
            android:name="net.exkazuu.ManekkoDance.activities.ActionActivity"
            android:label="@string/title_activity_action" >
        </activity>
        <activity
            android:name="net.exkazuu.ManekkoDance.Tutorial"
            android:label="@string/title_tutorial" >
        </activity>
        <activity
            android:name="net.exkazuu.ManekkoDance.Help"
            android:label="@string/help" >
        </activity>
    </application>

</manifest>